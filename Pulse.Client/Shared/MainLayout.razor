@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Elevation="1" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer"/>
        <MudSpacer/>
        Pulse
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Custom.Uncategorized.Radioactive" Color="Color.Inherit"/>
    </MudAppBar>
    <MudDrawer @bind-Open="@open">

    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code
{
    private bool open;

    void ToggleDrawer()
    {
        open = !open;
    }
}